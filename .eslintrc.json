{
  "extends": ["airbnb-base"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "max-len": ["error", { "code": 120 }],
    "no-param-reassign": ["error", { "props": false }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "globals": {
    "PublicKeyCredential": "readonly"
  }
}
